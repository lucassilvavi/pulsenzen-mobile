# ============================================
# PULSEZEN APP - ENVIRONMENT CONFIGURATION
# ============================================

# API Configuration
EXPO_PUBLIC_API_BASE_URL=https://pulsezen-api-production.up.railway.app/api
EXPO_PUBLIC_API_TIMEOUT=30000

# Environment
EXPO_PUBLIC_NODE_ENV=development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_USE_REAL_API=true

# Features Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true

# Security
EXPO_PUBLIC_ENCRYPTION_KEY=your-32-character-encryption-key
EXPO_PUBLIC_JWT_SECRET=your-jwt-secret-key

# Third-party Services
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# Firebase configurado como desabilitado - remover coment√°rio e configurar para habilitar:
# EXPO_PUBLIC_FIREBASE_CONFIG={"apiKey":"","authDomain":"","projectId":"","storageBucket":"","messagingSenderId":"","appId":""}
EXPO_PUBLIC_FIREBASE_CONFIG=disabled

# App Configuration
EXPO_PUBLIC_APP_VERSION=1.0.5
EXPO_PUBLIC_MIN_APP_VERSION=1.0.5
EXPO_PUBLIC_FORCE_UPDATE_URL=https://your-app-store-url

# Rate Limiting
EXPO_PUBLIC_API_RATE_LIMIT=100
EXPO_PUBLIC_REQUEST_TIMEOUT=10000

# Storage Configuration
EXPO_PUBLIC_MAX_STORAGE_SIZE=50MB
EXPO_PUBLIC_STORAGE_ENCRYPTION=true

# Development Only
EXPO_PUBLIC_API_MOCK_ENABLED=false
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_USE_REAL_API=true
