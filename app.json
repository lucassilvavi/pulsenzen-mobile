{
  "expo": {
    "name": "pulse-zen-app",
    "slug": "pulse-zen-app",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pulsezenapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.lucassilvavi.pulsezenapp",
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "audio"
        ],
        "NSAppleMusicUsageDescription": "Este app reproduz música de relaxamento para você.",
        "NSMicrophoneUsageDescription": "Este app não usa o microfone."
      }
    },
    "android": {
      "package": "com.lucassilvavi.pulsezenapp",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-font",
      "expo-audio",
      "expo-video",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow PulseZen to use Face ID for secure and convenient authentication."
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "updates": {
      "enabled": false,
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/bc440f0b-15bf-4a15-b1fc-55a31c1d68a9"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bc440f0b-15bf-4a15-b1fc-55a31c1d68a9"
      }
    },
    "owner": "lucassilvavi",
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
