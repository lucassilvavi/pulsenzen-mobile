{
  "cli": {
    "version": ">= 12.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "buildType": "apk"
      },
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug"
      },
      "env": {
        "NODE_ENV": "development"
      }
    },
    "staging": {
      "distribution": "internal",
      "channel": "staging",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "buildConfiguration": "Release"
      },
      "env": {
        "NODE_ENV": "staging"
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Release"
      },
      "env": {
        "NODE_ENV": "production",
        "EXPO_PUBLIC_API_BASE_URL": "https://pulsezen-api-production.up.railway.app/api",
        "EXPO_PUBLIC_API_VERSION": "v1",
        "EXPO_PUBLIC_API_TIMEOUT": "30000",
        "EXPO_PUBLIC_DEBUG_MODE": "true",
        "EXPO_PUBLIC_USE_REAL_API": "true",
        "EXPO_PUBLIC_ENABLE_ANALYTICS": "true",
        "EXPO_PUBLIC_ENABLE_CRASH_REPORTING": "true",
        "EXPO_PUBLIC_ENABLE_OFFLINE_MODE": "true",
        "EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH": "true",
        "EXPO_PUBLIC_APP_VERSION": "1.0.4",
        "EXPO_PUBLIC_MIN_APP_VERSION": "1.0.0",
        "EXPO_PUBLIC_API_RATE_LIMIT": "100",
        "EXPO_PUBLIC_REQUEST_TIMEOUT": "10000",
        "EXPO_PUBLIC_MAX_STORAGE_SIZE": "50MB",
        "EXPO_PUBLIC_STORAGE_ENCRYPTION": "true",
        "EXPO_PUBLIC_API_MOCK_ENABLED": "false",
        "EXPO_PUBLIC_LOG_LEVEL": "info"
      }
    },
    "production": {
      "channel": "production",
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "ios": {
        "buildConfiguration": "Release"
      },
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./service-account-key.json",
        "track": "internal"
      },
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "1234567890",
        "appleTeamId": "ABCD123456"
      }
    }
  }
}
